			exe "set" . a:local "statusline+=\\ %="
			exe "set" . a:local "statusline+=\\ [%{strlen(&fenc)?&fenc:'none'},%{&ff}]%h%m%r"
			exe "set" . a:local "statusline+=\\ [%{&expandtab==0?'tabs':'space'}%{StatuslineWarning()}]"
			exe "set" . a:local "statusline+=\\ %y\\ %c,%l/%L\\ %P"
