#!/bin/dash
# ~/.dashrc: executed by dash(1) for non-login shells.
# Inspired by .bashrc

# Load .profile when not already done
if [ -z "$ENV_PROFILE" ] && [ -r "$HOME/.profile" ]; then
  . "$HOME/.profile"
fi

# If not running interactively, don't do anything
[ -z "$PS1" ] && return
case $- in
  *i*) ;;
  *) return;;
esac

# for setting history length see HISTSIZE in dash(1)
HISTSIZE=1000

# make less more friendly for non-text input files, see lesspipe(1)
[ -x /usr/bin/lesspipe ] && eval "$(SHELL=/bin/sh lesspipe)"

# set basic prompt
export PS1='${USER}${HOSTNAME:+@$HOSTNAME}: $PWD\$ '

# enable color support of ls and also add handy aliases
if [ -x /usr/bin/dircolors ]; then
  test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
  alias ls='ls --color=auto'
  alias dir='dir --color=auto'
  alias vdir='vdir --color=auto'
  alias grep='grep --color=auto'
  alias fgrep='fgrep --color=auto'
  alias egrep='egrep --color=auto'
fi

# some more ls aliases
#alias ll='ls -l'
#alias la='ls -A'
#alias l='ls -CF'

######################################
# Personnal section
######################################

# Set load flag
export ENV_DASHRC=$((ENV_DASHRC+1))

# Bootstrap user profile
if [ -r "$HOME/.rc" ]; then
  . "$HOME/.rc"
fi

# History (use 'fc')
export HISTSIZE=5000

# make sure this is the last line
# to ensure a good return code
